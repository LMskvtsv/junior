<hibernate-mapping>
    <class name = "models.Car" table = "cars">
        <id name = "id" column = "id">
            <generator class = "native"/>
        </id>
        <many-to-one name = "brand" column = "brandId" class = "models.Brand"/>
        <many-to-one name = "transmission" column = "transmissionId" class = "models.Transmission"/>
        <many-to-one name = "body" column = "bodyId" class = "models.Body"/>
        <many-to-one name = "engine" column = "engineId" class = "models.Engine"/>
        <property name = "price" column = "price"/>
        <property name = "photoPath" column = "photoPath"/>
        <property name = "description" column = "description"/>
        <property name = "sold" column = "isSold"/>
        <many-to-one name = "user" column = "userId" class = "models.User"/>
    </class>
</hibernate-mapping>