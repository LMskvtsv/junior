<hibernate-mapping>
    <class name = "models.User" table = "users">
        <id name = "id" column = "id">
            <generator class = "native"/>
        </id>
        <property name = "login" column = "login"/>
        <property name = "password" column = "password"/>
        <property name = "name" column = "name"/>
    </class>
</hibernate-mapping>