<hibernate-mapping>
    <class name = "ru.domain.Item" table = "items">
        <id name = "id" column = "id">
            <generator class = "native"/>
        </id>
        <property name = "description" column = "description"/>
        <property name = "created" column = "created"/>
        <property name = "isDone" column = "isDone"/>
    </class>
</hibernate-mapping>